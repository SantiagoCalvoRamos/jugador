procedure chequeo_menu_opciones(var nombre:paquete);
begin
	error1:=true;
	if nombre='acabar  '  then begin error1:=false;  end;
	if error1=true then
                           begin
                                   write(nombre);
                                   write(':opcion incorrecta');
                                   writeln();
                                   texto_menu_opciones;
                           end;
end;

procedure leerteclado(var entrada:paquete);
var
	c:char;
	k,i:integer;
begin
        k:=0;
        c:=' ';writeln('? ');
	while (c=' ') do read(c);
	k:=1;
	while (c<>' ') and (k<=8) do
		begin
			entrada[k]:=c;
			k:=k+1;
			read(c);
		end;
	if k<9
	then for i:=k to 8 do entrada[i]:=' ';
end;

procedure opcionesconsola(var opcion:paquete);
	var
		mediador:paquete;
		error:boolean;
	begin
		error:=true;
		texto_menu_opciones;
		while error do
			begin
				leerteclado(mediador);
				chequeo_menu_opciones(mediador);
			end;
	end;



procedure opciones(var opcion:paquete);
begin
   opcionesconsola(opcion);
   case opcion of
    'recoger ': ;
    'acabar  ': ;
    end;
end;


begin

      repeat
	  opciones(opcion);
      until opcion='acabar  ';
end.	
